extends /layouts/_layout

block content
  h1= title
  
  form(action='/login', method='post')
    input#utc-offset(type='hidden', name='utc-offset')
    label= email
    input(type='text', name='email')
    label= password
    input(type='password', name='password')
    button(type='submit') #{title}

block additional-js
  != js('app.login_view')